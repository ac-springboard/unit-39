    "version": "0.2.0",
    "configurations": [
        {
            "name": "1 - Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "userDataDir": false,
            "runtimeExecutable": "/usr/bin/google-chrome",
            "runtimeArgs": [
                "--profile-directory=Profile 4",
                "--auto-open-devtools-for-tabs",
                "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "2 - Launch via NPM",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/home/acampos/.nvm/versions/node/v14.17.1/bin/npm",
            "runtimeArgs": [
                "start"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "3 - Launch Chrome Debugging",
            "request": "attach",
            "type": "pwa-chrome",
            "port": 9222
        }
       
    ]
}